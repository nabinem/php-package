{
    "name": "nabinem/php-package",
    "description": "This is my package php-package",
    "keywords": [
        "nabinem",
        "php-package"
    ],
    "homepage": "https://github.com/nabinem/php-package",
    "license": "MIT",
    "authors": [
        {
            "name": "Nabin Nembang",
            "email": "yakthumbanabinem@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.15",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Nabinem\\PhpPackage\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nabinem\\PhpPackage\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
